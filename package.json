{
  "name": "electron-angular-quickstart",
  "version": "1.1.3",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run electron:start",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron:start": "npm-run-all -p ng:clean ng:build electron:serve",
    "ng:clean": "rimraf dist && rimraf main.js",
    "electron:serve": "wait-on ./dist/electron-angular/index.html && npm run electron:watch",
    "ng:build": "ng build --watch=true",
    "electron:tsc": "tsc -w main.ts ",
    "electron:run": "wait-on main.js && electron . --serve",
    "electron:exit": "taskkill /IM electron.exe /F",
    "electron:watch": "concurrently --kill-others \"npm run electron:tsc \"  \"npm run electron:run\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/cdk": "^6.2.0",
    "@angular/material": "^6.4.1",
    "concurrently": "^3.6.1",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.1.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "electron": "^2.0.5",
    "electron-builder": "^20.25.0",
    "electron-reload": "^1.2.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "^2.9.2",
    "wait-on": "^2.1.0"
  }
}
